---
const { stock } = Astro.props;
---

<div class="card">
  <img src={stock.url} alt="Stock Image" />
  <div class="details">
    <h2>{stock.key.replace('.png', '')}</h2>
    <p>Updated on: {new Date(stock.lastModified).toLocaleDateString()}</p>
  </div>
</div>

<style>
  .card {
    background: rgba(0, 0, 0, 0.7);
    border-radius: 12px;
    padding: 24px;
    margin: 20px;
    color: white;
    max-width: 400px;
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.3);
  }
  
  img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  .details {
    margin-top: 16px;
  }

  h2 {
    font-size: 1.5rem;
    margin: 0;
  }

  p {
    font-size: 1rem;
    margin-top: 8px;
  }
</style>
